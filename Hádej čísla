b = 8
c = 0
d = 2
e = []
print ("Uhadni cislo od 1 do 20, mas 3 pokusy") #vypsani ukolu
while c < 3: #loop
    try: #reseni zadani znaku
        a = int( input ("Je to cislo:")) #nacteni cisla
    except:
        a = 30
    if a == b: #vyhra
        print ("Vyhral jsi") 
        exit()
    elif a in range(21):  
        if c < 2: #pri zbyvajicich pokusech
            if c in range(2): #pri zbyvajicich pokusech
                print (f"Toto je spatne, pocet pokusu: {d-c}") 
                
        else: #pri prohre
                print ("Prohral jsi")
                
    else: 
        if c in range(2):
            print (f"Toto neni podminka kretene! Pocet pokusu: {d-c}.") #kretenstvi
            
        else: #pri prohre
            print ("Prohral jsi a Robin je teplej")
    e.append(1)
    c = sum(e)
